    <body>
        <!--<img src="C:\Users\user\Desktop\projWEB\slogo_transparent.png" style="height: 80px; width: 130px;">-->
        <br><br><br>

        <div style="display: flex; justify-content: center; flex-direction: center; height: 100vh;">

                <div class="container">
                    <div class="screen">
                        <div class="screen__content">
                            <div class="mb-3">
                                <h3>
                                    <span class="material-icons">
                                    </span> <b>Case Report</b>
                                </h3>
                            </div>

                            <br><br>
                            <p><b>Δήλωση θετικού αποτελέσματος Covid test</b></p>
                            
                            <div class="form-check">
                                <p><b>Έχω διαγωστεί ώς Θετικός:&nbsp;</b>
                                <input id="cb1" type="checkbox" />
                                <label class="form-check-label" for="flexCheckChecked"></p></label>
                            </div>
                            </br>
                            <div>
                                <p><b>Πότε διαγνώστηκα</b></p>
                            <div class="login__field">
                                <i class="signup__icon fas fa-user"></i>
                                <input type="date" id="cdate" placeholder="Covid Diagnosed" class="login__input" onfocus="(this.type='date')" onblur="(this.value == '' ? this.type='text' : this.type='date')">
                            </div>
                                <br><br><br><br>
                                <div class="mb-3">
                                    <br><br><br>
                                    <div style="text-align: left;">
                                        <button id="covsave" onclick="covidinfo()" class="btn btn-outline- waves-effect" style="color: #acacac;"><b>Save</b></button>
                                        <button id="covback" onclick="redirected()" class="btn btn-outline- waves-effect" style="color: #acacac;"><b>Back</b></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="screen__background">
                            <span class="screen__background__shape screen__background__shape4"></span>
                            <span class="screen__background__shape screen__background__shape3"></span>
                            <span class="screen__background__shape screen__background__shape2"></span>
                            <span class="screen__background__shape screen__background__shape1"></span>
                        </div>
                    </div>
                </div>

            
        </div>

    </body>
